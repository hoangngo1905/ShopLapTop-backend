@model ShopLapTop.Model.Entities.OrderDetail

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h1 class="card-title">Thêm mới chi tiết đơn hàng</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá sản phẩm</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Số lượng</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Sản phẩm</label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId">
                    <option value="">Chọn sản phẩm</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Đơn hàng</label>
                <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId">
                    <option value="">Chọn đơn hàng</option>
                </select>
            </div>
            <div class="form-group">
                <input style="margin-top: 12px" type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
