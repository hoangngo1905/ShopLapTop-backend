@model IEnumerable<ShopLapTop.Model.Entities.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Danh sách đơn hàng</h5>
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Họ Tên</th>
                    <th>SĐT</th>
                    @* <th>Email</th> *@
                    <th>Ghi chú</th>
                    <th>Địa chỉ</th>
                    <th>Thời gian</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>Người dùng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Fullname)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phonenumber)</td>
                        @* <td>@Html.DisplayFor(modelItem => item.Email)</td> *@
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Orderdate)</td>
                        <td>
                            @{
                                string statusText;
                                switch (item.Status)
                                {
                                    case null:
                                        statusText = "Đang xử lý";
                                        break;
                                    case 1:
                                        statusText = "Đang giao hàng";
                                        break;
                                    case 2:
                                        statusText = "Đã giao hàng";
                                        break;
                                    case 3:
                                        statusText = "Đã hủy";
                                        break;
                                    default:
                                        statusText = "Không xác định";
                                        break;
                                }
                            }
                            @statusText
                        </td>
                        <td>@String.Format("{0:#,##0}đ", item.Total)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.Username)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?')" style="display:inline-block">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>