@model List<ShopLapTop.Model.Entities.Manufacturer>
@{
    ViewData["Title"] = "Danh sách hãng laptop";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Danh sách hãng laptop</h5>
        <div class="mb-3">
            <a href="@Url.Action("Create", "Manufacturer", new { area = "Admin" })" class="btn btn-primary">Tạo mới</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Mã hãng</th>
                    <th>Tên hãng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <div style="display: inline-block;">
                                <a href="@Url.Action("Edit", "Manufacturer", new { area = "Admin", id = item.Id })" class="btn btn-primary">Sửa</a>
                            </div>
                            <div style="display: inline-block; margin-left: 5px;">
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?')">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger">Xóa</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
