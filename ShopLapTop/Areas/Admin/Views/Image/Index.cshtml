@model IEnumerable<ShopLapTop.Model.Entities.Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Danh sách ảnh</h5>
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Đường dẫn ảnh</th>
                    <th>Sản phẩm</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Url)</td>
                        <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                        <td>
                            <div style="display: inline-block;">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                            </div>
                            <div style="display: inline-block; margin-left: 5px;">
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?')">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger">Xóa</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>