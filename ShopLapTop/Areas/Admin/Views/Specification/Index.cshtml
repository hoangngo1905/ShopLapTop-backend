@model IEnumerable<ShopLapTop.Model.Entities.Specification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Danh sách cấu hình laptop</h5>
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>CPU</th>
                    <th>RAM</th>
                    <th>Card đồ họa</th>
                    <th>Hệ điều hành</th>
                    <th>Kích thước</th>
                    <th>Cân nặng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cpu)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ram)</td>
                        <td>@Html.DisplayFor(modelItem => item.GraphicsCard)</td>
                        <td>@Html.DisplayFor(modelItem => item.OperatingSystem)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dimensions)</td>
                        <td>@Html.DisplayFor(modelItem => item.Weight) KG</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?')" style="display:inline-block">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
